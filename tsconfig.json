{
  "compilerOptions": {
    "rootDir": "src",
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "node",
    "outDir": "dist",
    "lib": ["esnext", "es2017", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types",
      "packages/*/node_modules/@types",
      "typings"
    ],
    "jsx": "react",
    "sourceMap": true,
    "noUnusedLocals": false
  },
  "exclude": [
    "node_modules"
  ]
}
